<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="574.0" prefWidth="658.0" spacing="20" style="-fx-background-color: #4A3A7C; -fx-padding: 20;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ce316.HelloController">
    <children>
        <Label style="-fx-text-fill: white; -fx-font-size: 24px;" text="Create New Project" />
      <TextArea fx:id="createNewProject_ProjectName" prefHeight="58.0" prefWidth="618.0" promptText="Project Name (It should be unique)" />
        <ComboBox fx:id="createNewProject_ConfigurationComboBox" promptText="Select Configration" style="-fx-background-color: #FFA258;">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Java" />
                    <String fx:value="C++" />
                    <String fx:value="Python" />
                </FXCollections>
            </items>
        </ComboBox>
      <TextArea fx:id="createNewProject_ProjectDescription" prefHeight="139.0" prefWidth="618.0" promptText="Project Description (optional)" />
      <TextArea fx:id="createNewProject_ExpectedOutput" prefHeight="90.0" prefWidth="618.0" promptText="Expected Output (It Can Be Directly Written or You Can Choose a Code)" />
      <HBox prefHeight="54.0" prefWidth="618.0">
         <children>
            <Button mnemonicParsing="false" text="Upload Code" />
         </children>
      </HBox>
      <HBox prefHeight="42.0" prefWidth="618.0">
         <children>
            <TextArea fx:id="mainClassNameTextArea" prefHeight="40.0" prefWidth="623.0" promptText="Main class name (Assumed to be main or Main if not entered)" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <HBox prefHeight="30.0" prefWidth="618.0" spacing="150.0">
         <children>
              <Button fx:id="createNewProject_CreateProject" alignment="CENTER" onAction="#createProject" style="-fx-background-color: #FFA258; -fx-text-fill: black;" text="Create Project" />
              <Button onAction="#cancel" style="-fx-background-color: #FFA258; -fx-text-fill: black;" text="Cancel" />
              <Button onAction="#setBackButton" style="-fx-background-color: #FFA258; -fx-text-fill: black;" text="Back to Main Menu" />
         </children>
      </HBox>
    </children>
</VBox>
