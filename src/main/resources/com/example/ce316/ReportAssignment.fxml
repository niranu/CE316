<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ce316.HelloController">
   <center>
      <VBox fx:id="root" alignment="CENTER" spacing="20" style="-fx-background-color: #4A3A7C; -fx-padding: 20;">
          <children>
              <Label style="-fx-text-fill: white; -fx-font-size: 24px;" text="Assignment Reports" />
              <TableView fx:id="reportsTable" prefHeight="200.0" prefWidth="600.0">
                  <columns>
                      <TableColumn prefWidth="150.0" text="Student Name">
                          <cellValueFactory>
                        <PropertyValueFactory property="studentName" />
                     </cellValueFactory>
                      </TableColumn>
                      <TableColumn prefWidth="150.0" text="Project">
                          <cellValueFactory>
                        <PropertyValueFactory property="projectName" />
                     </cellValueFactory>
                      </TableColumn>
                      <TableColumn prefWidth="100.0" text="Score">
                          <cellValueFactory>
                        <PropertyValueFactory property="score" />
                     </cellValueFactory>
                      </TableColumn>
                      <TableColumn prefWidth="200.0" text="Status">
                          <cellValueFactory>
                        <PropertyValueFactory property="status" />
                     </cellValueFactory>
                      </TableColumn>
                  </columns>
              </TableView>
              <HBox spacing="10">
                  <Button text="Export Report" />
                  <Button text="Refresh" />
               <Button fx:id="BackButton" mnemonicParsing="false" onAction="#setBackButton" text="Back" />
              </HBox>
          </children>
      </VBox>
   </center>
   <top>
      <MenuBar style="-fx-background-color: #FFA258;" BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
